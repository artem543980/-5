#include <iostream>
#include <ctime>
using namespace std;

void print_matrix(int** array, int N, int M) {
	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < M; j++) {
			cout << array[i][j] << " ";
		}
		cout << endl;
	}

}

void random_matrix(int** array, int N, int M) {
	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < M; j++) {
			array[i][j] = rand() % (90) + 10;
		}
	}
}
//��1

void swap(int** array, int N, int M) {
	int* mass = new int [N];
	int a = rand() % N;
	int b = rand() % N;
	for (int i = 0; i < N; i++)
	{
		mass[i] = array[a][i];
		array[a][i] = array[b][i];
		array[b][i] = mass[i];
	}
    print_matrix(array, N, M);
}


//��2
int variable(int** array, int N, int M) {
	int cnt = 0;
	int x = rand() % 99 + 10;
	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < M; j++) {
			if (array[i][j] == x) {
				cnt++;
			}
		}
	}
	cout << endl << x << endl;
	return cnt;
}
//��3
void sumM(int** array, int N, int M) {
	for (int i = 0; i < M; i++) {
		int sum = 0;
		for (int j = 0; j < N; j++) {
			sum += array[j][i];
		}
		cout << sum << " ";
	}
 }

int main() {
	srand(time(0));
	int N, M;
	cin >> N >> M;
	int** array = new int* [N];
	for (int i = 0; i < N; i++) {
		array[i] = new int[M];
	}
	random_matrix(array, N, M);
	print_matrix(array, N, M);
	cout << endl;
	swap(array, N, M);
	cout << endl;
	cout << variable(array, N, M);
	cout << endl;
    sumM(array, N, M);
	system("pause");
	return 0;
}
